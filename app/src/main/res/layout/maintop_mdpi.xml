<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
             android:background="@drawable/toppage"
    >
            <!--FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"              
                 android:background="@drawable/topboard">
            >                                                  
            </FrameLayout-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:background="#00000000"
    >
<!-- alignParentBottom is effective for RelativeLayout -->
        <LinearLayout
             android:id="@+id/BottomButtons"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
        >
            <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
            >
                <Button
                    android:id="@+id/TB_Local"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Local"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
                <Button
                    android:id="@+id/TB_Robot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Robot"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
            </LinearLayout>
            <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                    android:layout_marginBottom="2dp"
            >
                <Button
                    android:id="@+id/TB_Server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Server"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
                <Button
                    android:id="@+id/TB_Partner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Partner"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
            </LinearLayout>
            <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                    android:layout_marginBottom="2dp"
            >
                <Button
                    android:id="@+id/TB_Option"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Option"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
                <Button
                    android:id="@+id/TB_AjagocOption"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="AjagocOpt"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
                <Button
                    android:id="@+id/TB_OnlineHelp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="OnlineHelp"
               	android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            android:background="@android:drawable/btn_default_small"
                />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
	        	 	android:layout_above="@id/BottomButtons"
                    android:layout_gravity="center_horizontal"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
	                 android:orientation="vertical"
                >
                    <ImageView
                         android:src="@drawable/topboard"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
	                    android:layout_marginTop="32dp"
                    />                                             
                    <LinearLayout
                         android:layout_width="fill_parent"
                         android:layout_height="32dp"
                         android:orientation="horizontal"
                    >
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                             android:orientation="horizontal"
                        >
                            <ImageView
                                 android:src="@drawable/kanjigo"
                                 android:layout_width="wrap_content"
                                 android:layout_height="fill_parent"
                            />                                     
                            <LinearLayout
                                 android:layout_width="fill_parent"
                                 android:layout_height="fill_parent"
                                 android:orientation="horizontal"
                                 android:gravity="center"
                            >
                                <ImageView
                                     android:src="@drawable/topajagoc"
                                     android:layout_width="wrap_content"
                                     android:layout_height="fill_parent"
                                />                                 
                                <!--TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="fill_parent"
                                        android:text="Ajagoc"
                                    android:background="#00000000"
                                    android:textColor="#ff40ff50"
                                        android:textSize="50sp"
                                /-->                                 
		    		        </LinearLayout>
		    			</RelativeLayout>
    		        </LinearLayout>
    			</RelativeLayout>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>
